// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String
  email         String  @unique
  phone         String
  password      String
  verifiedEmail Boolean @default(false)
  role          Role    @default(USER)
  carts         Cart[]
}

model Content {
  id     Int         @id @default(autoincrement())
  title  String
  body   String?
  images String[]
  type   ContentType @unique
}

model Ticket {
  id             Int     @id @default(autoincrement())
  name           String
  destination    String
  description    String?
  include        String?
  destinationURL String?
  price          Int
  carts          Cart[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  bookingId String     @unique
  identity  String?
  name      String?
  email     String
  phone     String?
  date      DateTime
  quantity  Int
  status    CartStatus @default(PENDING)
  Ticket    Ticket?    @relation(fields: [ticketId], references: [id])
  ticketId  Int?
  User      User?      @relation(fields: [userId], references: [id])
  userId    Int?
}

enum ContentType {
  ABOUT
  GALLERY
}

enum Role {
  USER
  ADMIN
}

enum CartStatus {
  PENDING
  ACCEPTED
  REJECTED
  DONE
  ARCHIVED
}
